<?xml version="1.0"?>
<odoo>

	<record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@id='category_reference']" position="after">
        		<div class="col-12 col-lg-6 o_setting_box" name="allow_orderline_user">
                    <div class="o_setting_left_pane">
                        <field name="allow_orderline_user"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_orderline_user"/>
                        <div class="text-muted">
                            Add salesperson to orderlines
                        </div>
                        <div class="content-group pos_iot_config" attrs="{'invisible': [('allow_orderline_user', '=', False)]}">

                            <div class="row">
                                <label string="List Allowed Employees" for="employee_salesperson_ids" class="col-lg-4 o_light_label"/>
                                <field name="employee_salesperson_ids" widget="many2many_tags" 
                                    domain="[('company_id', '=', company_id),('agent_id.agent_type', '=','salesman')]"  attrs="{'required': [('allow_orderline_user', '=', True)]}" 
                                />
                            </div>
                            <div class="row">
                                <label string="Mandatory Salesperson" for="mandatory_salesperson" class="col-lg-4 o_light_label"/>
                                <field name="mandatory_salesperson" />
                            </div>
                        </div>
                    </div>
                </div>
        	</xpath>
        </field>
    </record>

</odoo>
