<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" inherit_id="point_of_sale.template">

    <t t-name="SalesPersonPopupWidget">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text">
                <header class="title"><t t-esc="widget.options.title || '' " /></header>
                <t t-if="widget.options.salespersons">
                    <div class='salesperson-scroll'>
                        <table class='salesperson'>
                            <tbody>
                                <tr class="salesperson-selected" t-foreach="widget.options.salespersons" t-as="salesperson" t-att-data-value="salesperson['name']" t-att-data-id="salesperson['id']">
                                    <td>
                                        <span t-esc="salesperson['name']" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>

                <footer class="footer">
                    <div class="button cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>